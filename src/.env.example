# Note Taker AI - Environment Variables
# Copy this file to .env and update with your actual values

# Server Configuration
PORT=5000
NODE_ENV=development # development, production, test

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/note_taker_ai
# For production, use a connection string like:
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/note_taker_ai

# Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=30d # Token expiration time

# SAP Sales Cloud Configuration
SAP_TENANT_URL=your-tenant.crm.cloud.sap
SAP_API_USERNAME=api_user@company.com
SAP_API_PASSWORD=secure_password
SAP_AUTH_TYPE=basic # basic or certificate

# For certificate-based authentication (optional)
# SAP_CLIENT_CERT_PATH=/path/to/certificate.pem
# SAP_CLIENT_KEY_PATH=/path/to/private.key

# Logging Configuration
LOG_LEVEL=info # error, warn, info, debug

# AI Service Configuration (if using external AI services)
# OPENAI_API_KEY=your_openai_api_key
# GOOGLE_AI_API_KEY=your_google_ai_api_key

# CORS Configuration
CORS_ORIGIN=http://localhost:3000 # Frontend URL for CORS

# Rate Limiting
RATE_LIMIT_WINDOW=15 # Time window in minutes
RATE_LIMIT_MAX=100 # Maximum requests per window
